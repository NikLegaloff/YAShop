@model YAShop.Common.Domain.Product

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
    var inStock = Model.QTY > 0;
}

<h1>Product details</h1>
<div class="row">
  <div class="col-md-5 text-center"><img src="@Model.Image" style="max-width: 100%;"/></div>
  <div class="col-md-1"></div>
  <div class="col-md-6">
      <h3 >@Model.Title</h3>
      <table class="fw-bold" width="100%">
          <tr>
              <td>@Model.SKU</td>
              <td class="text-center">@Html.Raw(inStock ? "In stock: " + @Model.QTY : "<span class='text-danger'>Out of stock</span>")</td>
              <td class="text-end text-primary">$@Model.Price.ToString("0.00")</td>
            </tr>
      </table>
      <div class="mt-2">@Html.Raw(Model.Description)</div>
      @if (Model.QTY > 0)
      {
          using (Html.BeginForm("Add", "Cart", FormMethod.Post))
          {
              <div class="row">
                  <input type="hidden" name="id" value="@Model.Id"/>
                  <div class="col-md-6"></div>
                  <div class="col-md-2 mt-2  d-grid"><input type="number" name="qty" value="1" min="1" class="form-control"/></div>

                  <div class="col-md-4 mt-2  d-grid"><input type="submit" value="Add to cart" class="btn btn-primary"/></div>
              </div>
          }
      }
  </div>
</div>
